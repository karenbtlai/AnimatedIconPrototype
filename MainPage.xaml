                        <Slider.Header>
                            <local:AnimatedIcon
                        x:Name="QA_Brightness"
                        Glyph="&#xE706;"
                        FontSize="40">
                            </local:AnimatedIcon>
                        </Slider.Header>
                    </Slider>
                    <Slider Width="200" local:AnimatedIcon.IsIconController="true" IsThumbToolTipEnabled="False">
                        <Slider.Header>
                            <FontIcon Glyph="&#xE706;" 
                              FontSize="40"/>
                        </Slider.Header>
                    </Slider>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="4" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="8">
                    <Slider Width="200" local:AnimatedIcon.IsIconController="true" IsThumbToolTipEnabled="False">
                        <Slider.Header>
                        <local:AnimatedIcon
                        x:Name="QA_Volume"
                        Glyph="&#xE15D;"
                        FontSize="40">
                        </local:AnimatedIcon>
                        </Slider.Header>
                    </Slider>
                    <!--<CheckBox x:Name="MuteCheckBox">Mute</CheckBox>-->

                    <Slider Width="200" local:AnimatedIcon.IsIconController="true" IsThumbToolTipEnabled="False">
                        <Slider.Header>
                            <FontIcon Glyph="&#xE15D;" 
                              FontSize="40"/>
                        </Slider.Header>
                    </Slider>
                </StackPanel>
            </Grid>
            
            <Grid HorizontalAlignment="left" VerticalAlignment="Center">
